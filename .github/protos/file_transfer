syntax = "proto3";

service FileTransfer {
    rpc UploadFile(stream FileChunk) returns (UploadStatus);
    rpc DownloadFile(FileRequest) returns (stream FileChunk);
}

message FileChunk {
    bytes content = 1;
    string filename = 2;
}

message UploadStatus {
    bool success = 1;
    string message = 2;
}

message FileRequest {
    string filename = 1;
}
